<?xml version="1.0" encoding="UTF-8"?><configuration scan="true" scanPeriod="10 seconds" debug="false">    <property name="logName" value="food"/>    <property name="logBase" value="/Users/liubihi/work/food/log"/>    <property name="actionLogName" value="actionLog"/>    <property name="actionLogBase" value="/Users/liubihi/work/food/log/actionlog"/>    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">        <encoder>            <pattern>%d %5p [%F:%L] - %m%n</pattern>        </encoder>        <layout class="ch.qos.logback.classic.PatternLayout">            <pattern>%date [%thread] %-5level %logger{80}[%file:%line method:%M] - %msg%n</pattern>        </layout>    </appender>    <appender name="logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">        <Encoding>UTF-8</Encoding>        <File>${logBase}/${logName}.log</File>        <layout class="ch.qos.logback.classic.PatternLayout">            <pattern>%date [%thread] %-5level %logger{80}[%file:%line method:%M] - %msg%n</pattern>        </layout>        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">            <maxHistory>24</maxHistory>            <fileNamePattern>${logBase}/${logName}-%d{yyyy-MM-dd_HH}-%i.log.gz</fileNamePattern>            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">                <maxFileSize>1MB</maxFileSize>            </timeBasedFileNamingAndTriggeringPolicy>        </rollingPolicy>    </appender>    <appender name="actionLogfile" class="ch.qos.logback.core.rolling.RollingFileAppender">        <Encoding>UTF-8</Encoding>        <File>${actionLogBase}/${actionLogName}.log</File>        <layout class="ch.qos.logback.classic.PatternLayout">            <pattern>%msg%n</pattern>        </layout>        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">            <maxHistory>24</maxHistory>            <fileNamePattern>${logBase}/${logName}-%d{yyyy-MM-dd_HH}-%i.log.gz</fileNamePattern>            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">                <maxFileSize>10MB</maxFileSize>            </timeBasedFileNamingAndTriggeringPolicy>        </rollingPolicy>    </appender>    <!--<logger name="org.springframework.web.filter">-->        <!--<level value="debug" />-->    <!--</logger>-->    <logger name="com.food.aop.log" level="info">        <!--<appender-ref ref="stdout"/>-->        <appender-ref ref="actionLogfile"></appender-ref>    </logger>    <root level="info">        <appender-ref ref="stdout"/>        <appender-ref ref="logfile"/>    </root></configuration>