<@override name="headcontent"><script type="text/javascript"        src="http://api.map.baidu.com/api?v=2.0&ak=HmryDL8tsG15o3g8z7WF89omBwGh2ao6"></script><style type="text/css">    h2 {        line-height: 30px;    }    h2.green {        color: #449124;    }    #map {        width: 100%;        height: 100%;        overflow: hidden;        margin: 0;        font-family: "微软雅黑";    }</style><script type="text/javascript">    $(document).ready(function () {        var map = new BMap.Map("map");        var marker;        var size = 18;        map.centerAndZoom("北京", 11);        map.enableScrollWheelZoom(true);        map.enableContinuousZoom(true);    //启用地图惯性拖拽，默认禁用        //为了使用地图更加方便，我们还可以添加上缩放的平移控件，以及地图的缩略图控件，并设置他要显示的位置：        map.addControl(new BMap.NavigationControl());  //添加默认缩放平移控件        map.addControl(new BMap.OverviewMapControl()); //添加默认缩略地图控件        map.addControl(new BMap.OverviewMapControl({isOpen: true, anchor: BMAP_ANCHOR_BOTTOM_RIGHT}));   //右下角，打开        map.addEventListener('click', function (e) {            loadMarker(e.point);        });        var localSearch = new BMap.LocalSearch(map);        //允许自动调节窗体大小        localSearch.enableAutoViewport();        localSearch.setSearchCompleteCallback(function (searchResult) {            var poi = searchResult.getPoi(0);            loadMarker(poi.point);            //刷新面板成为地图的中心            map.centerAndZoom(poi.point, size);        });        $("#address").keyup(function (event) {            if (event.keyCode == 13) {                $("#search").click();            }        });        $("#search").click(function () {            var keyword = $("#address").val();            localSearch.search(keyword);        });        function loadMarker(point) {            map.clearOverlays();//清空原来的标注            marker = null;            //获取经度和纬度，将结果显示在文本框中            $("#point").html(point.lng + "," + point.lat);            // 创建标注，为要查询的地址对应的经纬度            marker = new BMap.Marker(new BMap.Point(point.lng, point.lat));            map.addOverlay(marker);        }    });</script></@override><@override name="body"><div class="mis_main" style="width:1200px;">    <div class="prices_tit">        <h1 class="big_title">            美食查找        </h1>    </div>    <div class="mis_con" style="width:1160px;">        <h2 class="sub_title"><span>在地图上选出查找的位置</span></h2>        <table width="100%" cellpadding="0" cellspacing="0" border="0">            <tbody>            <tr>                <td width="400px" valign="middle">                    <div id="point"></div>                    <div>输入地址<input id="address" type="text" value=""/><input id="search" type="button" value="查找"/>                    </div>                </td>                <td height="400px">                    <div id="map"></div>                </td>            </tr>            </tbody>        </table>        <h2 class="sub_title"><span>美食选择与定位</span></h2>        <table width="100%" cellpadding="0" cellspacing="0" border="0">            <tbody>            <tr>                <td width="400px" height="100px" valign="middle">                    <div></div>                    <div></div>                </td>                <td>                </td>            </tr>            </tbody>        </table>    </div></div></@override><@extends name="/shared/base.ftl"/>